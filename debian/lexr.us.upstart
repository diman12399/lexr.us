# lexr.us - lexr.us job file
description "url shortener service"
start on runlevel [2345]
stop on runlevel [016]
respawn
respawn limit 10 5
env DEFAULTS="/etc/default/lexr.us"
env RUNNER="/usr/bin/lexr.us"
script
set -a
. $DEFAULTS
exec $RUNNER --host=$HOST --port=$PORT --logging=$LOGGING --user=$USER --group=$GROUP --log_file_prefix=$LOG_PREFIX --redis_host=$REDIS_HOST --redis_port=$REDIS_PORT
end script
